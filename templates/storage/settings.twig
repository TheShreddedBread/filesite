<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="{{url_for('static', filename='css/style.css')}}">
        <title>FileShare</title>
    </head>
    <body onclick="closeAllFileOptionMenu(this); StopEventPropagation(event);">
        <noscript><h1>PLEASE ENABLE JAVASCRIPT OR SITE MIGHT NOT WORK CORRECTLY</h1></noscript>
        {{ data['popupHTML'] }}
        <div class="leftSidebar">
            {{ data['navbarHTML'] }}
        </div>
        <div class="storageContent" onclick="closeAllFileOptionMenu(this); StopEventPropagation(event);">
            <div class="userInfoBox" onclick="StopEventPropagation(event);">
                <h5>Personal Information</h5>
                <br>
                <p>Username: {{name}} </p><br>
                <form action="/storage/settings" method="POST" onclick="StopEventPropagation(this);">
                    <input name="askforupdate" value="updateemail" hidden>
                    <p>Email: {{email}} <button><span class="material-symbols-outlined">edit</span></p></button>
                </form><br>
                <form action="/storage/settings" method="POST" onclick="StopEventPropagation(this);">
                    <input name="askforupdate" value="updatepsw" hidden>
                    <p>Password: ***** <button><span class="material-symbols-outlined">edit</span></button>
                </form></p>
            </div>
        </div>

        <script src="{{url_for('static', filename='js/script.js')}}"></script>
    </body>
</html>